# Job Application Tracker Bot - Environment Configuration
# Copy this file to .env and fill in your actual credentials

# ============================================
# LINKEDIN CREDENTIALS (Required for scraping)
# ============================================
# Your LinkedIn email address
LINKEDIN_EMAIL=your_email@example.com

# Your LinkedIn password
LINKEDIN_PASSWORD=your_secure_password

# ============================================
# EMAIL NOTIFICATIONS (Optional)
# ============================================
# SMTP server for sending email notifications
# Gmail: smtp.gmail.com
# Outlook: smtp-mail.outlook.com
SMTP_SERVER=smtp.gmail.com

# SMTP port (usually 587 for TLS, 465 for SSL)
SMTP_PORT=587

# Email address to receive notifications
NOTIFICATION_EMAIL=your_email@example.com

# Email password or app-specific password
# For Gmail: Generate an app password at https://myaccount.google.com/apppasswords
EMAIL_PASSWORD=your_app_password

# ============================================
# APPLICATION SETTINGS
# ============================================
# Enable automatic job applications (true/false)
# WARNING: Set to false to start - review jobs manually first!
AUTO_APPLY_ENABLED=false

# Maximum number of applications to send per day
MAX_APPLICATIONS_PER_DAY=10

# ============================================
# USER INFORMATION (For auto-filling applications)
# ============================================
# Your phone number
USER_PHONE=+254-123-456-789

# Your city/location
USER_CITY=Nairobi

# Your personal website or portfolio (optional)
USER_WEBSITE=https://yourportfolio.com

# ============================================
# ADVANCED SETTINGS (Optional)
# ============================================
# Number of retry attempts for failed operations
MAX_RETRIES=3

# Browser headless mode (true for invisible, false to see browser)
HEADLESS_MODE=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
